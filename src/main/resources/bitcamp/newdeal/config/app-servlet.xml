<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!-- 웹 컴포넌트(페이지 컨트롤러 등)만 관리한다. -->
	<context:component-scan base-package="bitcamp.newdeal.web">
	    <context:exclude-filter type="regex" expression="bitcamp.newdeal.web.json.*"/>
	</context:component-scan>
	   
    <mvc:annotation-driven enable-matrix-variables="true"/>
	
    <!-- JSP파일을 /WEB-INF/jsp 폴더에서 찾을수 있도록 viewResolver를 설정한다 -->
    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>
	    <!-- Ajax 요청에 대한 Cross Domain 설정 -->
    <mvc:cors>
        <mvc:mapping path="/**"
            allowed-origins="*"
            max-age="100" />
    </mvc:cors>
</beans>